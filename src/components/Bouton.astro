---
export interface Props {
  variant?: "beige" | "jaune";
  text?: string;
  url?: string;
}

const { text, url, variant = "jaune" } = Astro.props;

const variantClass = {
  beige: "bg-base-300 active:bg-info",
  jaune: "bg-secondary active:bg-[#ad9f61]",
};
---

<a
  href={url}
  class={`inline-flex items-center justify-center text-base-content font-jua text-lg font-normal py-3 px-15 gap-2.5 border-2 rounded-4xl shadow-md w-full max-w-xs
        transition-all duration-300 ease-in-out transform
        ${variantClass[variant]}`}
>
  {text}
</a>